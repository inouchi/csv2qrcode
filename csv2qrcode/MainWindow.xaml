<Window x:Class="Csv2QrCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="csv2qrcode" Height="150" Width="400">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CSVファイル選択 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,20">
            <TextBox
                Width="280"
                Text="{Binding CsvFilePath, UpdateSourceTrigger=PropertyChanged}"
                IsReadOnly="True" />
            
            <Button
                Content="参照"
                Command="{Binding SelectFileCommand}"
                Width="50"
                Margin="10,0,0,0"/>
        </StackPanel>

        <!-- プログレスバー -->
        <ProgressBar
            Grid.Row="1"
            Height="20"
            Visibility="{Binding IsGenerating, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!-- QRコード出力ボタン -->
        <Button
            Grid.Row="2"
            Content="QRコード出力"
            Command="{Binding GenerateQrCodeCommand}"
            IsEnabled="{Binding CanGenerateQrCode}"
            Width="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
    </Grid>
</Window>
